@model List<Quiz> 
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Quiz List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Quiz" asp-action="Create" class="btn btn-primary">Add</a>
        </div>
    </div>
<table class="table table-border table-striped">
    <thead>
        <tr>
            <th>
                Question
            </th>
            <th>
                Answer
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach(var obj in Model.OrderBy(u=>u.Id))
            {
                <tr>
                    <td>@obj.Question</td>
                    <td>@obj.Answer</td>
                </tr>
            }
    </tbody>
</table>
</div>
@model List<Quiz> 
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Quiz List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Quiz" asp-action="Create" class="btn btn-primary">Add</a>
        </div>
    </div>
<table class="table table-border table-striped">
    <thead>
        <tr class="text-center">
            <th>
                Question
            </th>
            <th>
                Answer
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
        <tbody class="text-center">

        @foreach(var obj in Model.OrderBy(u=>u.Id))
            {
                <tr>
                    <td>@obj.Question</td>
                    <td>@obj.Answer</td>
                    <td style="width:100px; text-align:center">
                        <div class="w-100 btn-group d-flex justify-content-center align-items-center" role="group">
                            <a asp-controller="Quiz" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="width:150px">Edit</a>
                            <form asp-controller="Quiz" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@obj.Id" />
                                <button type="submit" class="btn btn-danger mx-2 ">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>
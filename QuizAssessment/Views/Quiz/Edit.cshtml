@model Quiz

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Quiz</h2>
		</div>
		<div class="mb-3" style="display:flex; flex-direction:column">
			<label>Question</label>
			<input asp-for="Question" placeholder="Enter question." />
			<span asp-validation-for="Question" class="text-danger"></span>
		</div>
		<div class="mb-3" style="display:flex; flex-direction:column">
			<label>Answer</label>
			<input asp-for="Answer" placeholder="Enter answer." />
			<span asp-validation-for="Question" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary" style="width:100%;">Update</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Quiz" asp-action="Index" class="btn btn-outline-secondary" style="width:100%">Back To List</a>
			</div>
		</div>
	</div>
</form>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}